package chessengine;

public class Main {
	
  Piece[] pieces;
  void initialisePieces() {
	  pieces = new Piece[32];
	  //add white pieces to data structure,
	  //then black pieces. White - true
	  //black - false
	  
	  boolean colour=false;
	  int rank = 0;
	  do {
		colour=!colour;
	    for(int i=0;i<8;i++) {
		  pieces[i]= (Piece) new Pawn(i,rank,colour);
	    }
	    
	  }while(colour!=false);
  }
  
  public static void main(String[] args) {
	  
  }
}
